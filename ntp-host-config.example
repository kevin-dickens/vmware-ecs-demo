#Confgure NTP Servers
apiVersion: esx.vmware.com/v1alpha1
kind: HostConfiguration
metadata:
  name: ntp-sync
  namespace: esx-system
spec:
  layertype: Incremental
  profile: |
    {
      "esx": {
        "system": {
          "system_time": {
            "enabled": true,
            "protocol": "NTP",
            "ntp_config": {
              "server": [{
                  "hostname": "10.151.2.62",
                  "command": "SERVER"
                },
                {
                  "hostname": "10.151.2.190",
                  "command": "SERVER"
                }
              ]
            }
          }
        }
      }
    }
